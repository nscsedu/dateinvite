<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="16"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:weightSum="12"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="WhatsApp Alerts!" />

                                <TextView
                                    android:background="@drawable/whatsup_icon"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    />

                            </LinearLayout>
                        </LinearLayout>


                        <TextView
                            android:text="We will contact you through your WhatsApp every time you have an invitation."
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:text="This way you you will be able to respond to your invitations much quicker. "
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/important"
                            android:text="Important! Your WhatsApp number will not be visible on your profile. Your number will only be visible to us."
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Here is how it works:"
                            android:textStyle="bold"
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:text="Every time somebody invites you out we will contact you through your WhatsApp to notify you of any invitations. We will only alert you one time. "
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:text="All other chat communications after the initial invitation will be sent to the app and not WhatsApp."
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/tvTitle"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="Enter your WhatsApp number below:"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/editstate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/my_border"
                    android:hint="WhatsApp number"
                    android:paddingLeft="10dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout



            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"


android:layout_gravity="bottom"
android:gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

<LinearLayout
    android:layout_weight="1.5"
    android:layout_width="0dp"
    android:layout_height="40dp" />

            <Button
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_bg_rounded_corners"
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:text="NO" />

            <Button
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_bg_rounded_corners"
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"

                android:layout_weight="3"
                android:text="YES" />
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>