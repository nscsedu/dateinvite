<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tutorials.hp.recyclerpagination.MainActivity"
    tools:showIn="@layout/activity_main">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/test1234"
                android:layout_width="fill_parent"
                android:layout_height="4dp"


                />
            <TextView
                android:id="@+id/test123"
                android:layout_below="@+id/test1234"
                android:layout_above="@+id/demo"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Top Countries:"
                android:gravity="center"

                />
            <LinearLayout
                android:background="@color/grey_500"
                android:id="@+id/demo"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <LinearLayout
                    android:id="@+id/colombia1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/colombia"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="7"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:background="@drawable/colombia"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/usa1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/usa"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="7"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:background="@drawable/usa"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/brazil1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/brazil"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="7"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:background="@drawable/brazil"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/canada1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/canada"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="7"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:background="@drawable/austria_flage"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/demo1"


                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/button_bg_whitered_corners"
                android:textColor="#646666"
                android:orientation="horizontal"
                android:weightSum="14"
                android:layout_below="@+id/demo"
                >
                <TextView
                    android:id="@+id/contactad"
                    android:layout_weight="12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Contact Admin"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"

                    />

                <TextView
                    android:id="@+id/contact_admin"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/headphone"
                    android:gravity="right"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardrv"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/demo1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lrv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textColor="#FFFFFF"
                        android:background="#CD5C5C"
                        android:layout_margin="5dp"
                        android:text="&lt;"
                        android:id="@+id/prevBtn"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />


                    <Button
                        android:textColor="#FFFFFF"
                        android:background="#CD5C5C"
                        android:layout_margin="5dp"
                        android:text="First"
                        android:id="@+id/firstpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:textColor="#FFFFFF"
                        android:background="#CD5C5C"
                        android:layout_margin="5dp"
                        android:text="&gt;"
                        android:id="@+id/nextBtn"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>