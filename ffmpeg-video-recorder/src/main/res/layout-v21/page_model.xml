<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height"

                android:clickable="true"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/age"
                android:layout_margin="2dp"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="#66000000"
                android:text="17"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nameTxt"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:gravity="center"
                android:textColor="@color/album_title"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/count"
                android:text="New York"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTxt"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:gravity="center"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/invitesreceived"
                android:text="Invites received: 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/count"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:gravity="center"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/avilablefor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/invitesreceived"
                android:text="Avaiable for:"
                android:textColor="@color/red"
                android:gravity="center"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:textSize="@dimen/songs_count" />


            <LinearLayout


                android:layout_below="@id/avilablefor"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"




                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:weightSum="12">
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1">





                </LinearLayout>
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2">
                    <Button

                        android:id="@+id/coffee_image"
                        android:layout_width="3dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:background="@drawable/coffee"
                        />



                </LinearLayout>
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1">





                </LinearLayout>
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1">




                </LinearLayout>

                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2">

                    <Button

                        android:id="@+id/drinks_image"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/drink" />



                </LinearLayout>
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1">





                </LinearLayout>
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1">





                </LinearLayout>
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2">

                    <Button

                        android:id="@+id/dinner_image"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/dinner" />



                </LinearLayout>
                <LinearLayout






                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1">





                </LinearLayout>

            </LinearLayout>




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>