<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/sendinvitation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/invitation_new_en"/>
            </LinearLayout>
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="400dp"
                >


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dip"
                    android:layout_gravity="right|bottom"

                    android:padding="12dip"

                    android:background="@drawable/like_off"


                    />

            </FrameLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border">
                <LinearLayout


                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:weightSum="12"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Pine City United States"
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView

                            android:text="28"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />


                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="12"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:text="-----------------------------------------------------------------------------------"
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView

                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />


                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="12"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Invites received"
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:text="1"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="My summary"/>
            </LinearLayout>
            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border">
                <TextView
                    android:background="@drawable/my_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Android test account"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About me"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:orientation="vertical">
                <TextView

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Have Kids:No"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Drink:"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Smoke:"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Dating Preferences"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:background="@drawable/my_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:background="@drawable/button_bg_rounded_corners"
                    android:text="BLOCK THIS USER"

                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginLeft="90dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>