<resources>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#646666</item>
        <item name="colorAccent">#FFFFFF </item>
        <item name="windowActionBarOverlay">false</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash1</item>
    </style>

    <style name="ParallaxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>    <item name="android:textColorPrimary">@color/md_blue_500</item>
        <item name="android:textColorAlertDialogListItem">#A844BD</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:textColor">@color/md_blue_500</item>
        <item name="android:textColorAlertDialogListItem">#A844BD</item>
    </style>

    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:textColor">@color/md_blue_500</item>
        <item name="android:textColorPrimary">@color/md_blue_500</item>
        <item name="android:textColorSecondary">@color/md_blue_500</item>

    </style>




    <style name="AlertDialogCustomTheme" >
        <item name="android:textColor">#7ABDFF</item>
